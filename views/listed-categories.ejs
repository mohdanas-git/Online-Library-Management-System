<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listed-Categories</title>
    <style>
      body {
        align-items: center;
      }
      td{
        text-align: center;
        font-weight: normal;
        font-size: 12px;
      }
    </style>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <%- include('admin-header') %>
    <p class="page-heading">Manage Categories</p>
    <table>
      <tr>
        <th colspan="15">Categories Listing</th>
      </tr>
      <tr>
        <td colspan="5">
          <select name="record-row" id="record-row-page">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
          </select>
          <p style="color: black; display: inline-block">Records per page</p>
        </td>
        <td colspan="5"></td>
        <td colspan="5" id="table-search">
          <p style="color: black; display: inline-block; margin-right: 10px">
            Search:
          </p>
          <input type="search" id="issued-books-input" />
        </td>
      </tr>
      <tr>
        <th colspan="1">#</th>
        <th colspan="4">Category</th>
        <th colspan="3">Updation Date</th>
        <th colspan="3">Updation Date</th>
        <th colspan="4">Action</th>
      </tr>
      <tbody>
        <tr>
            <% var index1=0 %>
            <% addcategory.forEach(category => { %>
        <td colspan="1"><%= ++index1 %></td>
        <td colspan="4"><%= category.categoryname %></td>
        <td colspan="3">2024-02-04 12:04:19</td>
        <td colspan="3">2024-02-04 12:04:19</td>
        <td colspan="4">
          <form action="/update-category/<%= category._id %>" method="get" style="display: inline;">
          <button class="btns edit-btn" type="submit">Edit</button>
        </form>
        <form action="/delete-category/<%= category._id %>" method="post" style="display: inline;">
          <button class="btns delete-btn" type="submit">Delete</button>
        </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
      <tr>
        <td colspan="5">Showing 1 to 2 of 2 entries</td>
        <td colspan="0"></td>
        <td colspan="5"></td>
        <td style="cursor: not-allowed">Previous</td>
        <td
          style="background-color: rgb(41, 106, 228); color: white"
        >
          1
        </td>
        <td style="cursor: not-allowed">Next</td>
      </tr>
    </table>
    <script src="script.js"></script>
  </body>
</html>
