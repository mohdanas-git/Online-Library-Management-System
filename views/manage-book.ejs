<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage-Book</title>
    <link rel="stylesheet" href="style.css" />
    <style>
      td {
        font-weight: normal;
        font-size: 12px;
      }
      table {
        width: 80%;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <%- include('admin-header') %>
    <p class="page-heading">Manage Book</p>
    <table>
      <tr>
        <th colspan="15">Books Listing</th>
      </tr>
      <tr>
        <td colspan="5">
          <select name="record-row" id="record-row-page">
            <option value="10">10</option>
            +
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
          </select>
          <p style="color: black; display: inline-block">Records per page</p>
        </td>

        <td colspan="5"></td>
        <td colspan="5" id="table-search">
          <p style="color: black; display: inline-block; margin-right: 10px">
            Search:
          </p>
          <input type="search" id="issued-books-input" />
        </td>
      </tr>
      <tr>
        <th colspan="1">#</th>
        <th colspan="2">Picture</th>
        <th colspan="3">Book Name</th>
        <th colspan="2">Category</th>
        <th colspan="2">Author</th>
        <th colspan="2">ISBN</th>
        <th colspan="1">Price</th>
        <th colspan="2">Action</th>
      </tr>
      <% var index1=0 %>
      <% var index=0 %>
      <% books.forEach(book => { %>
      <tr>
        <td colspan="1"><%= ++index %></td>
        <% if (book.bookpicUrl) { %>
        <td colspan="2">
          <img src="<%= book.bookpicUrl %>" alt="Book Image" width="100px" />
          <% } %>
        </td>
        <td colspan="3"><%= book.bookname %></td>
        <td colspan="2"><%= book.bookcategory %></td>
        <td colspan="2"><%= book.author %></td>
        <td colspan="2"><%= book.isbnnum %></td>
        <td colspan="1"><%= book.price %></td>
        <td colspan="2">
         <form action="/update-book/<%= book._id %>" method="get" style="display: inline;">
            <button type="submit" class="btns edit-btn">Edit</button>
          </form>
          <form action="/delete-book/<%= book._id %>" method="post" style="display: inline;">
            <button type="submit" class="btns delete-btn" style="margin: 0;">Delete</button>
          </form>
        </td>
        <% }) %>
      </tr>
      <tr>
        <td colspan="4">Showing 1 to 2 of 2 entries</td>
        <td colspan="7"></td>
        <td colspan="1" style="cursor: not-allowed">Previous</td>
        <td
          colspan="1"
          style="background-color: rgb(41, 106, 228); color: white"
        >
          1
        </td>
        <td colspan="1" style="cursor: not-allowed">Next</td>
      </tr>
    </table>
    <script src="script.js"></script>
  </body>
</html>
